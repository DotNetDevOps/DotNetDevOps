{
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "artifactsUri": {
      "type": "string"
    },
    "sourceVaultValue": {
      "type": "string"
    },
    "AzureWebJobsStorage": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2018-11-01",
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "name": "[parameters('name')]",
        "cors": {
          "allowedOrigins": []
        },
        "siteConfig": {
          "appSettings": [
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "dotnet"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            }
          ]
        },
        "clientAffinityEnabled": false,
        "reserved": false
      },
      "resources": [
      ],
      "location": "[parameters('location')]",
      "kind": "functionapp"
    },
    {
      "apiVersion": "2017-05-10",
      "type": "Microsoft.Resources/deployments",
      "name": "AddMSIToKeyVault",
      "dependsOn": [ "[parameters('name')]" ],
      "resourceGroup": "[first(skip(split(skip(parameters('sourceVaultValue'),1),'/'),3))]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "name": "[concat(last(split(parameters('sourceVaultValue'),'/')), '/add')]",
              "apiVersion": "2016-10-01",
              "properties": {
                "accessPolicies": [
                  {
                    "tenantId": "[reference(concat(resourceId('Microsoft.Web/sites',parameters('name')),'/providers/Microsoft.ManagedIdentity/Identities/default'),'2015-08-31-PREVIEW').tenantId]",
                    "objectId": "[reference(concat(resourceId('Microsoft.Web/sites',parameters('name')),'/providers/Microsoft.ManagedIdentity/Identities/default'),'2015-08-31-PREVIEW').principalId]",
                    "permissions": {
                      "keys": [ "all" ],
                      "secrets": [ "all" ],
                      "certificates": [ "all" ],
                      "storage": [ "all" ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "type": "Microsoft.Resources/deployments",
      "name": "UpdateAppSettings",
      "dependsOn": [ "AddMSIToKeyVault" ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "apiVersion": "2018-11-01",
              "name": "[parameters('name')]",
              "type": "Microsoft.Web/sites",
              "identity": {
                "type": "SystemAssigned"
              },
              "properties": {
                "name": "[parameters('name')]",
                "cors": {
                  "allowedOrigins": []
                },
                "siteConfig": {
                  "appSettings": [
                    {
                      "name": "FUNCTIONS_WORKER_RUNTIME",
                      "value": "dotnet"
                    },
                    {
                      "name": "AzureWebJobsStorage",
                      "value": "[parameters('AzureWebJobsStorage')]"
                    },
                    {
                      "name": "FUNCTIONS_EXTENSION_VERSION",
                      "value": "~2"
                    },
                    {
                      "name": "WEBSITE_RUN_FROM_ZIP",
                      "value": "[parameters('artifactsUri')]"
                    }
                  ]
                },
                "clientAffinityEnabled": false,
                "reserved": false
              },
              "resources": [
              ],
              "location": "[parameters('location')]",
              "kind": "functionapp"
            }
          ]
        }
      }
    }
  ],
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0"
}